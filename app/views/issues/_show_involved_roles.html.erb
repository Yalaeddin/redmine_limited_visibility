<% viewers = role_ids_for_current_viewers(@issue) %>

<hr/>
<div id='current_involved_roles_list' class='involved-roles' style='display: flex;'>
  <label id="label_involved_roles"><%= l("field_authorized_viewers") %></label>
  <span id="list_of_involved_roles_per_issue">
  <% Role.visibility_roles.sorted.each do |role| %>
    <% styles = "disabled" + (viewers.include?(role.id) || @issue.authorized_viewers.blank? ? " involved" : "") %>
    <%= render "roles/visibility_role", :role => role, :styles => styles %>
  <% end %>
  </span>
</div>
